v8js INSTALL php7.3

sudo add-apt-repository ppa:ondrej/php -y
sudo add-apt-repository ppa:stesie/libv8 -y
sudo apt-get update

sudo apt-get install -y php7.3 php7.3-{fpm,cli,common,apcu,mbstring,pdo,xml,curl,bcmath,mysql,redis,sqlite3,zip,geoip,dev} libv8-7.5 libv8-7.5-dev
cd /tmp && \
    git clone https://github.com/phpv8/v8js.git && \
    cd v8js && \
    phpize && \
    ./configure --with-v8js=/opt/libv8-7.5 LDFLAGS="-lstdc++"
    make && \
    make test && \
    make install

echo "extension = v8js.so" | sudo tee -a /etc/php/7.3/mods-available/v8js.ini
sudo phpenmod v8js